### 1. Etiqueta para Sangue - Tubo Pequeno 40x20mm
POST {{baseUrl}}/configuracoes/estrutura/etiquetas-amostra
Content-Type: {{contentType}}
Authorization: Bearer {{token}}

{
  "codigoEtiqueta": "ETQ-SANG-PEQUENO",
  "nome": "Etiqueta Sangue - Tubo Pequeno 40x20mm",
  "tipoAmostra": "sangue",
  "largura": 40,
  "altura": 20,
  "orientacao": "paisagem",
  "layout": {
    "tipo": "grid",
    "colunas": 2,
    "linhas": 2,
    "espacamento": 2,
    "padding": 3,
    "alinhamento": "left"
  },
  "campos": [
    "codigoBarras",
    "nomeParaciente",
    "dataColeta",
    "horaColeta"
  ],
  "corPrimaria": "#FF0000",
  "corSecundaria": "#FFFFFF",
  "templateZPL": "^XA\n^FO50,40^BCN,90,Y,N,N^FD{codigoBarras}^FS\n^FO50,145^A0N,24,24^FD{nomeParaciente}^FS\n^FO50,175^A0N,18,18^FD{dataColeta} {horaColeta}^FS\n^XZ",
  "padrao": true,
  "ativo": true,
  "observacoes": "Etiqueta padrão para tubos de sangue pequenos (3-5mL) - EDTA, citrato, heparina"
}


