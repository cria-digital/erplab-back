#     "lastPage": 1
#   }
# }

### Listar tipos ativos
GET {{baseUrl}}/exames/tipos-exame/ativos
Authorization: Bearer {{token}}

### Listar tipos que requerem agendamento
GET {{baseUrl}}/exames/tipos-exame/com-agendamento
Authorization: Bearer {{token}}

### Listar tipos que requerem autorização
GET {{baseUrl}}/exames/tipos-exame/com-autorizacao
Authorization: Bearer {{token}}

### Listar tipos que permitem coleta domiciliar
GET {{baseUrl}}/exames/tipos-exame/domiciliares
Authorization: Bearer {{token}}

### Buscar tipo por ID
GET {{baseUrl}}/exames/tipos-exame/{{tipoExameId}}
Authorization: Bearer {{token}}

### Buscar tipo por código
GET {{baseUrl}}/exames/tipos-exame/codigo/LAB001
Authorization: Bearer {{token}}

### Atualizar tipo de exame
PATCH {{baseUrl}}/exames/tipos-exame/{{tipoExameId}}
Content-Type: {{contentType}}
Authorization: Bearer {{token}}

{
  "descricao": "Exames de análises clínicas e bioquímicas realizados em laboratório",
  "ordem": 1,
  "permite_domiciliar": true,
  "configuracoes": {
    "tempoMedio": 45,
    "requisitoEspecial": "jejum de 8h",
    "observacoes": "Alguns exames podem ter requisitos específicos"
  }
}

### Expected Response
# Status: 200 OK
# {
#   "success": true,
#   "message": "Tipo de exame atualizado com sucesso",
#   "data": {
#     "id": "uuid",
#     ...
#   }
# }

### Desativar tipo de exame (soft delete)
DELETE {{baseUrl}}/exames/tipos-exame/{{tipoExameId}}
Authorization: Bearer {{token}}

### Expected Response
# Status: 200 OK
# {
#   "success": true,
#   "message": "Tipo de exame desativado com sucesso"
# }