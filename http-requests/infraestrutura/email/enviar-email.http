  "destinatario": "joao.silva@example.com",
  "template": "resultado-exame",
  "variaveis": {
    "nome": "João Silva",
    "tipoExame": "Hemograma Completo",
    "dataExame": "05/10/2024",
    "linkResultado": "https://portal.laboratorio.com/resultado/123"
  }
}

